rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para acceder a las categorías y ejercicios
    match /categories/{category}/{exerciseId} {
      allow read, write: if true; // Permitir lectura y escritura para todos (ajusta según tus necesidades)
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
