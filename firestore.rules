rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección "categories" y sus subcolecciones
    match /categories/{category} {
      allow read: if request.auth != null; // Solo usuarios autenticados

      // Reglas para subcolecciones dentro de una categoría
      match /{exercise}/{exercise} {
        allow read: if request.auth != null; // Solo usuarios autenticados
      }
    }

    // Reglas para la colección "users"
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId; // Solo propietarios
    }
  }
}